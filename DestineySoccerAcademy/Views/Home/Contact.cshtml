<div class="container">
    <hr />
</div>

<div class="row">
    <div class="container">
        <div class="col-lg-12">
            <form class="form" style="width: 100%">
                <h2 class="form-signin-heading">Contact Us</h2>
                <label for="inputEmail" class="sr-only">Email address</label>
                <input type="email" id="inputEmail" class="form-control" placeholder="Email address" required=""> <br />

                <label for="subject" class="sr-only">Subject</label>
                <input type="text" id="subject" class="form-control" placeholder="Subject" required=""> <br />

                <label for="message" class="sr-only">Message</label>
                <textarea class="form-control" placeholder="Message" id="message"></textarea> <br />

                <button class="btn btn-lg btn-primary btn-block" type="submit">Message Us</button>
            </form>
        </div>
    </div>
</div>